<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_main_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hx.smartschool.activities.main.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <!-- 中间替换区域 采用Weight =1 进行填满-->
    <FrameLayout
        android:id="@+id/ac_main_content_container_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />


    <!-- 下部的导航 -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/ac_main_content_buttom_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"

        app:menu="@menu/buttom_navigation" />


</LinearLayout>
