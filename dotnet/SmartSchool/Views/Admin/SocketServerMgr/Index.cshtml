@{
    ViewData["Title"] = "Socket 服务器管理";
}

<h2>Socket 服务器管理</h2>

<br/>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>成功!</strong> @ViewData["Message"].ToString()
    </div>
}


<div class="btn-group" role="group" aria-label="Socket 服务">


    <button type="submit" class="btn btn-default" id="start">开始服务</button>
    <button type="submit" class="btn btn-default" id="stop">关闭服务</button>
    <button type="button" class="btn btn-default" id="update">更新规则</button>

</div>
<form asp-action="Start" id="frm_start"></form>
<form asp-action="Stop" id="frm_stop"></form>
<form asp-action="Update" id="frm_update"></form>


@section Scripts {
    <script>
        $("#start").click(function() {
            $("#frm_start").submit();
        });

        $("#stop").click(function() {
            $("#frm_stop").submit();
        });

        $("#update").click(function() {
            $("#frm_update").submit();
        });

    </script>


}